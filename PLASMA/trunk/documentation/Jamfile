SubDir PLASMA documentation ;

if ! $(Documentation_INCLUDED) {
Documentation_INCLUDED = TRUE ;

rule Doxygen 
{
}

actions Doxygen {
  rm -rf html ;
  rm -rf HelloWorld ;
  cd .. ;
  rm -rf ../HelloWorld ;
  ./makeproject HelloWorld ;
  mv ../HelloWorld ./documentation ;
  cd documentation ;
  doxygen $(2) ;
}

Doxygen documentation : doxygen.cfg ;

rule Latex 
{
  local file = $(1) ;
  local target = $(file:S=.tex) ;
}

actions Latex {
  latex $(1) ;
  bibtex $(1) ;
  latex $(1) ;
  latex $(1) ;
  dvipdf $(1) ;
}

Latex user-guide : user-guide.tex ;

} # Documentation_INCLUDED