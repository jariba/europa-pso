SubDir PLASMA Examples ;

if ! $(PLASMA_READY) {

Module Examples : System ;

# For now all examples are added by hand:
# (Using Jam glob is the alternative)

SubInclude PLASMA Examples Light ;
#SubInclude PLASMA Examples NQueens ; # NQueens is java-only for now
SubInclude PLASMA Examples pddl2nddl ;
SubInclude PLASMA Examples Shopping ;
#SubInclude PLASMA Examples Tower ;

Depends run-examples-tests : run-Light-tests ;
#Depends run-examples-tests : run-NQueens-tests ;
Depends run-examples-tests : run-pddl2nddl-tests ;
Depends run-examples-tests : run-Shopping-tests ;
#Depends run-examples-tests : run-Tower-tests ;

if ! ( "Resources" in $(NO) ) {
   SubInclude PLASMA Examples Crew1 ;
   SubInclude PLASMA Examples ResourceViolations ;
   SubInclude PLASMA Examples Rover ;
   SubInclude PLASMA Examples UBO ;

   Depends run-examples-tests : run-Crew1-tests ;
   Depends run-examples-tests : run-ResourceViolations-tests ;
   Depends run-examples-tests : run-Rover-tests ;
   Depends run-examples-tests : run-UBO-tests ;
}

