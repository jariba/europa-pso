SubDir PLASMA NDDL test compiler ;

NDDL_COMPILER_TESTS = 
	class-constructor.nddl   multi-resources.nddl   simple-resources.nddl
	existential.nddl         no-world.nddl          simple-rules.nddl
	guards.nddl              plasma-base.nddl       subclass.nddl
	interval-constants.nddl  simple-class.nddl
	less-basic-model.nddl    simple-predicate.nddl 
	;

local compiler_test ;
for compiler_test in $(NDDL_COMPILER_TESTS) {
  local hh = $(compiler_test:S=.hh) ;
  local cc = $(compiler_test:S=.cc) ;
  local xml = $(compiler_test:S=.xml) ;
  LocalDepends tests : $(hh) $(cc) ;
  NddlParser $(xml) : $(compiler_test) ;
  NddlCompiler $(hh) $(cc) : $(xml) ;
}
