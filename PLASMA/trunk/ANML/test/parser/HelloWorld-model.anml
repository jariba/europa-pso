/*
 * @author Javier Barreiro
 * @brief HelloWorld model, generates a sequence of helloWorld activities of duration 10
 */

objtype YourObject
{
    action helloWorld()
    {
        duration 10;        
        condition over all /*start-10*/ { helloWorld(); }; // met by another HelloWorld action        
    }
}

