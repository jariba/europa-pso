// Rover-problem-instance.anml

// TODO: we need collections
Location lander, rock1, rock2, rock3, rock4;
Path p1,p2,p3;
Rover spirit;

fact over all {
    PlannerConfig(0, 100);

    lander = new Location("LANDER", 0, 0);
    rock1  = new Location("ROCK1",  9, 9);
    rock2  = new Location("ROCK2",  1, 6);
    rock3  = new Location("ROCK3",  4, 8);
    rock4  = new Location("ROCK4",  3, 9);

    p1 = new Path("Very Long Way", lander, rock4, -2000.0);
    p2 = new Path("Moderately Long Way", lander, rock4, -1500.0);
    p3 = new Path("Short Cut", lander, rock4, -400.0);
};

fact at start {
    spirit.battery_ = 100.0;
    spirit.location_ = lander;
    spirit.instrument_.state_ = "stowed";
};

goal in [0 100] {
    spirit.TakeSample(rock4);
};




