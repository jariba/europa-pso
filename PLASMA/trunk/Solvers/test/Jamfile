SubDir PLASMA Solvers test ;

if ! $(PLASMA_READY) {

 # All input file names used for the tests
 local inputFiles = StaticMatching.nddl ;

 # Create dependency for initial state files to be parsed
 local inputFile ;
 for inputFile in $(inputFiles) {
  NddlParser $(inputFile:S=.xml) : $(inputFile) ;
  LocalDepends run-solver-module-tests : $(inputFile:S=.xml) ;
 }

 NddlMain solver-module-tests : module-tests.cc : Model.nddl : Solvers ;
 RunModuleMain run-solver-module-tests : solver-module-tests ;
 LocalDepends tests : run-solver-module-tests ;
} # PLASMA_READY
