SubDir NQueens ;

if ! $(NQueens_READY) {
 # Declare a library for PlanWorks Control

 ModuleSharedLibrary NQueensController 
     : /home/tsmith/svn/PLASMA/ControllerStub.cc /home/tsmith/svn/PLASMA/MasterController.cc /home/tsmith/svn/PLASMA/SingleSolverController.cc 
     : System : NQueensController ;

 # Create a build target to run a problem
 RunNDDLProblem NQueens : NQueens-initial-state.nddl : NQueens-planner : PlannerConfig.xml ;

 # Create a build target for the planner executable with the given model.
 NddlMain NQueens-planner : NQueens-Main.cc : NQueens-model.nddl : System : NQueens-planner ;

 # Create a build target for the planner shared library with model.
 ModuleSharedLibrary NQueens : NQueens-model.o : System : NQueens ;

 Depends all : NQueens NQueensController ;
} # NQueens_READY
