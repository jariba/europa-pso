
class LightMgr {
 predicate turnOn  { duration=10; } 
 predicate turnOff { duration=10; }
}

/**
 * @brief Simple rules to force a repeated cycle
 */
 
LightMgr::turnOn
{
 meets (object.turnOff);
}

LightMgr::turnOff
{
 meets (object.turnOn);
}

LightMgr mgr = new LightMgr();
fact(mgr.turnOn initialCondition);
eq(initialCondition.start,0);