

enum ActionName {turnOn,turnOff};

class LightMgr {
 predicate turnOn  { ActionName action_name; duration=10; } 
 predicate turnOff { ActionName action_name; duration=10; }
}

/**
 * @brief Simple rules to force a repeated cycle
 */
 
LightMgr::turnOn
{
 eq(action_name,turnOn);
 meets (object.turnOff);
}

LightMgr::turnOff
{
 eq(action_name,turnOff);
 meets (object.turnOn);
}

LightMgr mgr = new LightMgr();
fact(mgr.turnOn initialCondition);
eq(initialCondition.start,0);