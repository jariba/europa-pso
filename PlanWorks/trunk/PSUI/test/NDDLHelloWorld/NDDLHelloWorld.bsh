Object safeBound(int bound)
{
	int INF=1e6;
    if (bound < -INF)
    	return "-INF";
    if (bound > INF)
    	return "INF";
    
    return bound;
}

String getBounds(Token t)
{
    StringBuffer buf = new StringBuffer();
    
    buf.append("[").append(t.getParameter("start")).append("]")
       .append(" ")
       .append("[").append(t.getParameter("end")).append("]");
    
    return buf.toString();
}

