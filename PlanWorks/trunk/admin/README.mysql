DELETE SEQUENCES FROM MYSQL DB
------------------------------
"start mysql" (above)
"mysql cmd line" (above)
mysql> connect PlanWorks;
mysql>  select * from Sequence;
mysql> delete from Sequence where SequenceOrdering = 9 || SequenceOrdering = 10 || SequenceOrdering = 11;
mysql> quit


